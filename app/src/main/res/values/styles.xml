<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/mariner</item>
        <item name="colorPrimaryDark">@color/cobalt</item>
        <item name="colorAccent">@color/mariner</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="durationMaterialButtonStyle">@style/DurationMaterialButton</item>
        <item name="durationChipStyle">@style/DurationChip</item>
        <item name="hideableButtonStyle">@style/HideableButton</item>
    </style>

    <style name="DurationMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/material_button_background_color</item>
        <item name="android:textColor">@color/material_button_text_color</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">@dimen/duration_material_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="DurationChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/duration_chip_background_color</item>
        <item name="android:textColor">@color/duration_chip_text_color</item>
        <item name="chipStrokeColor">@color/duration_chip_stroke_color</item>
        <item name="android:textAlignment">center</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="HideableButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mariner</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/zircon</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:strokeColor">@color/tropical_blue</item>
        <item name="iconTint">@color/mariner</item>
    </style>

    <style name="CustomMaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/CustomMaterialDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomMaterialDialogBody</item>
    </style>

    <style name="CustomMaterialDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomMaterialDialogBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
